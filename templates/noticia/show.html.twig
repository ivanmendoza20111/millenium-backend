{% extends 'base.html.twig' %}

{% block title %}Noticia{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}

    <div class="container-fluid">
        <h1>{{ noticium.titulo }}</h1>
        <h3>Fecha: {{ noticium.fecha ? noticium.fecha|date('d/m/Y') : '' }}</h3>
        <h3>Medio: {{ noticium.medio }}</h3>
        {% if noticium.path != '' %}
            <h3>Archivos: <a href="{{ path('app_noticia_download', { id: noticium.id } ) }}">Descargar</a> </h3>
        {% endif %}
        <a href="{{ path('app_dashboard_index') }}">Regresar al Dashboard</a>
    </div>
{% endblock %}
